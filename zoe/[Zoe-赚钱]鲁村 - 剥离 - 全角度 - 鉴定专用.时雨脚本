//鲁村捡碎片、卡片脚本（剥离版），鉴定专用，鲁村、鲁村门口启动，脚本制作@小巫师

isBack = 0
DogCard = 0
DragonCard = 0
humanBackHP = 人物详细信息(3)*0.5
humanBackMP = 人物详细信息(5)*0.05
petBackHP = 宠物详细信息(curPet,3)*0.4
petBackMP = 宠物详细信息(curPet,5)*0.05
isAutoSettings = 信息提示("是否以下列数值作为设置{ " $ "人回补血:" $ humanBackHP $ ", " $ "人回补魔:" $ humanBackMP $ ", " $ "宠回补血:" $ petBackHP $ ", " $ "宠回补魔:" $ petBackMP $ " }","36")
如果(isAutoSettings != 5)
	humanBackHP = 信息输入("人回补血值","人回补血值",humanBackHP)
	humanBackMP = 信息输入("人回补魔值","人回补魔值",humanBackMP)
	petBackHP = 信息输入("宠回补血值","宠回补血值",petBackHP)
	petBackMP = 信息输入("宠回补魔值","宠回补魔值",petBackMP)
如果尾()


循环(1)
	//补给卖石
	循环(人物详细信息(34) == "鲁米那斯")
		如果(isBack != 0)
			移动到("80","40")
			移动到("87","35")
			循环(人物详细信息("34") != "医院\\z0")
				等待("200")
			循环尾()
			移动到("18","15")

			IdentifyOK = 1
			循环(IdentifyOK != 0)
				IdentifyOK = 高速鉴定()
				护士恢复("4")
			循环尾()

			isBack = 0
			移动到("4","14")
			循环(人物详细信息("34") != "鲁米那斯")
				等待("200")
			循环尾()
		如果尾()
		如果(人物详细信息("33") > "6")
			移动到("80","40")
			移动到("88","51")
			循环(人物详细信息("34") != "杂货店\\z0")
				等待("200")
			循环尾()
			移动到("11","12")
			//汇报卡片数量
			DogCard = DogCard + 获取物品数量("地狱看门犬的卡片","")
			DragonCard = DragonCard + 获取物品数量("口袋龙的卡片","")
			发送聊天("已鉴定地狱看门犬的卡片: " $ DogCard ,"1","1")
			发送聊天("已鉴定口袋龙的卡: " $ DragonCard ,"1","1")
			//汇报碎片数量
			发送聊天("水晶碎片总数: " $ 获取物品数量("地的水晶碎片","")+获取物品数量("水的水晶碎片","")+获取物品数量("火的水晶碎片","")+获取物品数量("风的水晶碎片",""),"1","1")
			出售物品("2","魔石|口袋龙的卡片|地狱看门犬的卡片")
			移动到("4","13")
			循环(人物详细信息("34") != "鲁米那斯")
				等待("200")
			循环尾()
		如果尾()
		移动到("73","38")
		自动寻路("60","29")
		循环(人物详细信息("34") != "库鲁克斯岛")
			等待("200")
		循环尾()
		移动到("315","883")
		等待("500")
	循环尾()

	//外出工作
	循环(人物详细信息(34) == "库鲁克斯岛")
		如果(isBack == 0)

			//判定回补
			curPet = 当前出战宠物()
			如果(人物详细信息(2) < humanBackHP)
				isBack = 1
				跳出循环()
			如果尾()
			如果(人物详细信息(4) < humanBackMP)
				isBack = 1
				跳出循环()
			如果尾()
			如果(宠物详细信息(curPet,2) < petBackHP)
				isBack = 1
				跳出循环()
			如果尾()
			如果(宠物详细信息(curPet,4) < petBackMP)
				isBack = 1
				跳出循环()
			如果尾()

			如果(人物详细信息(33) > 19)
				isBack = 1
				跳出循环()
			如果尾()

			//开始捡碎片

			循环( 获取信息记录("发生错误，目标地点无法到达，自动寻路结束！","普通") != "" )
				//等待消除全部错误信息
				等待(100)
			循环尾()

			分割文本(Project, 获取周围信息("卡片？","物品"), "|")
			ProjectX = Project.2
			ProjectY = Project.3
			如果(ProjectX != "")
				自动寻路(ProjectX-1, ProjectY)
				拾取物品("0")
				拾取物品("1")
				拾取物品("2")
				拾取物品("3")
				拾取物品("4")
				拾取物品("5")
				拾取物品("6")
				拾取物品("7")
			如果尾()

			如果( 获取信息记录("发生错误，目标地点无法到达，自动寻路结束！","普通") != "" )
				自动寻路(315,883)
			如果尾()

			如果( 获取信息记录("发生错误\\c无效寻路坐标点..","普通") != "" )
				自动寻路(315,883)
			如果尾()

			//防止越走越远
			如果(人物详细信息(35) < 280)
				自动寻路(315,883)
			如果尾()
		如果尾()

		如果(isBack != 0)
			自动寻路(322,883)
			循环(人物详细信息(34) != "鲁米那斯")
				等待(100)
			循环尾()
		如果尾()
	循环尾()

循环尾()