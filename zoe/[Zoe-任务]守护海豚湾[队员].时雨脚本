//守护海豚湾,队员脚本,艾尔莎岛启动.前面自己跑,进入会馆后组队
//脚本制作@小巫师zoe

高速战斗("1")
自动战斗("1")

//判断位置
循环(人物详细信息("34") != "艾尔莎岛")
	等待(1000)
循环尾()

如果(获取物品数量("托尔丘的记忆","") != 1)
	发送聊天("身上没有记忆,请先完成记忆任务!",6,1)
	脚本结束()
如果尾()

//脚本开始

自动寻路(165,153)
对话NPC(4,7)
循环(人物详细信息("34") != "利夏岛")
	等待(200)
循环尾()

自动寻路(90,99)
循环(人物详细信息("34") != "国民会馆\\z0")
	等待(200)
循环尾()

自动寻路(108,54)
护士恢复(0)
等待(2000)

自动寻路(115,51)
对话NPC(1,7)
循环(人物详细信息("34") != "？？？\\z0")
	等待(200)
循环尾()

//等待加队
循环(1)
	加入队伍(6,"")
	如果(人物详细信息("37") >1 )
		发送聊天("队员脚本执行完毕,剩下由队长带队.请勿停止脚本,最后可以自动拿卵",6,1)
	如果尾()
	等待(2000)
循环尾()


循环(1)
	如果(人物详细信息("37") == 0 )
		移动到(41,28)
		对话NPC(2,7)
		对话NPC(1,7)
		循环(人物详细信息("35") == "41" || 人物详细信息("36") == "28")
			等待(2000)
		循环尾()
		发送聊天("任务结束,请打开海豚之卵",6,1)

		脚本结束()
	如果尾()
	等待(5000)
循环尾()
