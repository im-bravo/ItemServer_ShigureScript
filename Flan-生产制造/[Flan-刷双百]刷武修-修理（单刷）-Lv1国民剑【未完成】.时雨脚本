				tryCount = 0
				curX = 人物详细信息(35)
				curY = 人物详细信息(36)
				循环(tryCount < 40 && (curX != 141 || curY != 148))
					curX = 人物详细信息(35)
					curY = 人物详细信息(36)
					等待(100)
					tryCount = tryCount + 1
				循环尾()
			如果尾()
			//南2
			如果(curX >= 131 && curX <= 151 && curY >= 138 && curY <= 158)
				flag = 2
				自动寻路(141,148)
				人物转身(0)
				tryCount = 0
				curX = 人物详细信息(35)
				curY = 人物详细信息(36)
				循环(tryCount < 40 && (curX != 63 || curY != 79))
					curX = 人物详细信息(35)
					curY = 人物详细信息(36)
					等待(100)
					tryCount = tryCount + 1
				循环尾()
			如果尾()
			//西1
			如果(curX >= 53 && curX <= 73 && curY >= 69 && curY <= 89)
				flag = 3
				自动寻路(95,49)
				//等0~4s过图
				tryCount = 0
				循环(tryCount < 40 && 人物详细信息(34) != "修理工波利的家\\z0")
					等待(100)
					tryCount = tryCount + 1
				循环尾()
			如果尾()
		如果尾()
	循环尾()

	循环(人物详细信息(34) == "修理工波利的家\\z0")
		如果(curAction == "弄坏")
			移动到(1,9)
			自动寻路(9,2)
			//等0~4s过图
			tryCount = 0
			循环(tryCount < 40 && 人物详细信息(34) != "地下道\\z12")
				等待(100)
