		如果尾()
		如果(curAction == "弄坏")
			自动寻路(41,98)
			//等0~4s过图
			tryCount = 0
			循环(tryCount < 40 && 人物详细信息(34) != "法兰城")
				等待(100)
				tryCount = tryCount + 1
