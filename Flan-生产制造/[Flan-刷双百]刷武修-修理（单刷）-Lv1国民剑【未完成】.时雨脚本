// 刷武器修理

humanBackHP = 人物详细信息(3)*0.5
humanBackMP = 人物详细信息(5)*0.8

// 刷几次5技（当判断技能为5之时+1，如果到这个数，就不再触发重学技能）
countLv5Skill = 信息输入("刷几次五技（修理技能耐力+3,灵巧+3,智力-2）","刷几次五技",17)

//是去干什么
//当前要干嘛（买装备，弄坏，修装备，重学技能）
iCurAction = 信息输入("1.买装备，2.弄坏，3.修装备，4.重学技能","去干什么","2")
定义数组(curActions, 0)
加入成员(curActions, "买装备")
加入成员(curActions, "弄坏")
加入成员(curActions, "修装备")
加入成员(curActions, "重学技能")
curAction = curActions.iCurAction

// 是否打卡
isPunchTheClock = 信息提示("是否不打卡？【是】不打卡，【否】打卡", 36) != 5

//给配合者听
发送聊天("<我要刷双百>", 0, 1)

//装备名称
equipName = "国民剑"
//装备商店编号
equipNo = 1
//装备欲获取数量或实际数量（会自动检测）
equipCount = 20

//判断等级
lvSkill = 获取技能信息("修理武器")
如果(lvSkill == 1)
如果尾()
如果(lvSkill == 2)
如果尾()
如果(lvSkill == 3)
如果尾()
如果(lvSkill == 4)
如果尾()
如果(lvSkill > 4)
如果尾()

循环(1)

	循环(人物详细信息(34) == "艾尔莎岛")
		flag = 0
		// 如果(curAction == "弄坏")
			// flag = 1
			// 自动寻路(112,102)
			// //等0~4s过图
			// tryCount = 0
			// 循环(tryCount < 40 && 人物详细信息(34) != "温迪尔平原")
				// 等待(100)
				// tryCount = tryCount + 1
			// 循环尾()
		// 如果尾()

		如果(flag == 0)
			移动到(140,105)
			循环(人物详细信息(34) != "里谢里雅堡")
				对话NPC(1,2,"","","",2)
				tryCount = 0
				循环(tryCount < 20 && 人物详细信息(34) != "里谢里雅堡")
					等待(100)
					tryCount = tryCount + 1
				循环尾()
			循环尾()
		如果尾()
	循环尾()

	循环(寻找文本(人物详细信息(34), "龟裂的地下道地下") != -1)
		如果(curAction == "弄坏")
			//判断手上拿没拿武器，并且武器耐久掉没掉
			dur1 = 物品详细信息(3, 6)
			dur2 = 物品详细信息(4, 6)
			//左手还是右手位置
			pos = 3
			dur = 0
			maxDur = 0
			如果(dur1 != "")
				pos = 3
				dur = dur1
				maxDur = 物品详细信息(3, 7)
			如果尾()
			如果(dur2 != "")
				pos = 4
				dur = dur2
				maxDur = 物品详细信息(4, 7)
			如果尾()
			//耐久满，遇敌消耗
			如果(dur != 0 && dur == maxDur)
				自动遇敌(1,3,200)
				curHandMaxDur = 物品详细信息(pos, 7)
				循环(物品详细信息(pos, 6) == curHandMaxDur)
					等待(1000)
					等待战斗结束()
					如果(获取信息记录("被不可思议的力量送出了","系统") != "")
						跳出循环()
					如果尾()
					等待(1000)
				循环尾()
				自动遇敌(0)
			如果尾()

			等待战斗结束()
			//是否交换装备
			isSwapEquip = 0
			//耐久0，耐久不满换装备
			如果(dur == 0 || dur < maxDur)
				iPackPos = 9
				循环(isSwapEquip == 0 && iPackPos <= 28)
					itemName = 物品详细信息(iPackPos, 1)
					如果(itemName != "" && itemName == equipName)
						itemCurDur = 物品详细信息(iPackPos, 6)
						itemMaxDur = 物品详细信息(iPackPos, 7)
						//满耐久的才换
						如果(itemCurDur == itemMaxDur)
							移动物品(iPackPos, pos)
							等待(1000)
							isSwapEquip = 1
							发送聊天( "卸下[" $ equipName $ "]\S耐久:" $ dur $ "/" $ maxDur, 0, 1)
							等待(500)
							发送聊天( "换上<" $ (iPackPos - 8) $ ">[" $ itemName $ "]\S耐久:" $ itemCurDur $ "/" $ itemMaxDur, 4, 1)
						如果尾()
					如果尾()
					iPackPos = iPackPos + 1
				循环尾()
			如果尾()

			//耐久不满，也没换装备，说明全部不满，登出回城
			如果(dur < maxDur && isSwapEquip == 0)
				curAction = "修装备"
				等待(1000)
				登出回城()
				等待(1000)
			如果尾()
		如果尾()
	循环尾()

	循环(人物详细信息(34) == "法兰城")
		//当前要干嘛（买装备，弄坏，修装备，重学技能）
