// 用“家具”烧鉴定
// 请先定居新城

isJobSkill = 信息提示("鉴定是你本职技能吗？", 36) == 5

isBack = 0

okExpLv2 = 0
okExpLv6 = 0
skillLv = 获取技能信息("鉴定")

如果(skillLv == 1)
	okExpLv2 = 0
	okExpLv6 = 0
如果尾()

如果(skillLv == 2)
	okExpLv2 = 30
	如果(isJobSkill == 0)
		okExpLv2 = 15
	如果尾()
	okExpLv6 = 0
如果尾()

如果(skillLv == 3)
	okExpLv2 = 20
	如果(isJobSkill == 0)
		okExpLv2 = 10
	如果尾()
	okExpLv6 = 0
如果尾()

如果(skillLv == 4)
	okExpLv2 = 15
	如果(isJobSkill == 0)
		okExpLv2 = 7
	如果尾()
	okExpLv6 = 0
如果尾()

如果(skillLv == 5)
	okExpLv2 = 12
	okExpLv6 = 0
如果尾()

如果(skillLv == 6)
	okExpLv2 = 10
	okExpLv6 = 30
如果尾()

如果(skillLv == 7)
	okExpLv2 = 8
	okExpLv6 = 25
如果尾()

如果(skillLv == 8)
	okExpLv2 = 7
	okExpLv6 = 22
如果尾()

如果(skillLv == 9)
	okExpLv2 = 6
	okExpLv6 = 20
如果尾()

totalExp = 0
onceExp = 0
timeNode = 0

初始化计时器()

循环( 1 )

	循环(人物详细信息(34) == "艾尔莎岛")
		//如果( isBack == 0 )
			移动到(157,94)
			人物转身(1)
			循环(人物详细信息(34) != "艾夏岛")
				等待(100)
			循环尾()
		//如果尾()
	循环尾()

	循环(人物详细信息(34) == "艾夏岛")
		如果( isBack == 0 )
			curX = 人物详细信息(35)
			curY = 人物详细信息(36)
			flag = 0
			// 在传送石1范围
			如果(curX >= 81 && curX <= 86 && curY >= 108 && curY <= 117)
				flag = flag + 1
				自动寻路(167,102)
				循环(人物详细信息(34) != "哈丝塔的家\\z0")
					等待(100)
				循环尾()
			如果尾()

			//debug 发送聊天(flag,3)
			如果( flag == 0 )
				自动寻路(167,102)
				循环(人物详细信息(34) != "哈丝塔的家\\z0")
					等待(100)
				循环尾()
			如果尾()
		如果尾()

		如果(isBack != 0)
			自动寻路(112,81)
			循环(人物详细信息(34) != "医院\\z0")
				等待(100)
			循环尾()
		如果尾()

	循环尾()
//垃圾１:14668
//垃圾２:14669
//垃圾３:
	循环(人物详细信息(34) == "哈丝塔的家\\z0")
		如果(isBack == 0)
			移动到(11,11)
			onceExp = 0
			循环(人物详细信息(4) > 60)
				丢弃物品("垃圾１", 2, 1, 1)
				丢弃物品("垃圾２", 2, 1, 1)
				丢弃物品("垃圾３", 2, 1, 1)
				对话NPC(1, 7, "", "", "", 1)
				循环(获取物品数量("家具？") < 1)
					等待(100)
				循环尾()

				result = 高速鉴定("")

				如果(result == 0)
					r3 = 获取物品数量("垃圾３")
					如果(r3 > 0)
						onceExp = onceExp + okExpLv6
						totalExp = totalExp + okExpLv6
					如果尾()
					如果(r3 < 1)
						onceExp = onceExp + okExpLv2
						totalExp = totalExp + okExpLv2
					如果尾()
				如果尾()
				如果(result != 0)
					发送聊天("暂时鉴定不了[" $ result $ "]", 6, 1)
					丢弃物品("家具？", 2, 1, 1)
				如果尾()
				
				如果(获取信息记录("<back>","普通") != "")
					isBack = 1
					跳出循环()
				如果尾()
			循环尾()

			timeCost = 返回计时器()
			onceTimeCost = timeCost - timeNode
			timeNode = timeCost

			发送聊天("单次Exp:" $ onceExp $ ", 单效:" $ onceExp/onceTimeCost, 1, 1)
			发送聊天("总共Exp:" $ totalExp $ ", 平均:" $ totalExp/timeCost, 1, 1)

			isBack = 1
		如果尾()

		如果(isBack != 0)
			自动寻路(5,13)
			循环(人物详细信息(34) != "艾夏岛")
				等待(100)
			循环尾()
		如果尾()
	循环尾()

	循环(人物详细信息(34) == "医院\\z0")
		如果(isBack == 0)
			自动寻路(28,52)
			循环(人物详细信息(34) != "艾夏岛")
				等待(100)
			循环尾()
		如果尾()

		如果(isBack != 0)
			移动到(35,45)
			护士恢复(3)
			isBack = 0
			循环( 获取信息记录("<back>","普通") != "" )
				//等待消除全部<back>
				等待(100)
			循环尾()
		如果尾()
	循环尾()

循环尾()
