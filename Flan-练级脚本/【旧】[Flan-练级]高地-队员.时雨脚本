// 高地练级队员脚本

isSayBack = 信息提示("是否要求队员发出回补指令","36")

如果( isSayBack == 5 )
	curPet = 当前出战宠物()
	humanBackHP = 人物详细信息(3)*0.5
	humanBackMP = 人物详细信息(5)*0.05
	petBackHP = 宠物详细信息(curPet,3)*0.4
	petBackMP = 宠物详细信息(curPet,5)*0.05
	isAutoSettings = 信息提示("是否以下列数值作为设置{ " $ "人回补血:" $ humanBackHP $ ", " $ "人回补魔:" $ humanBackMP $ ", " $ "宠回补血:" $ petBackHP $ ", " $ "宠回补魔:" $ petBackMP $ " }","36")
	如果(isAutoSettings != 5)
		humanBackHP = 信息输入("人回补血值","人回补血值",humanBackHP)
		humanBackMP = 信息输入("人回补魔值","人回补魔值",humanBackMP)
		petBackHP = 信息输入("宠回补血值","宠回补血值",petBackHP)
		petBackMP = 信息输入("宠回补魔值","宠回补魔值",petBackMP)
	如果尾()
如果尾()

isBack = 0

循环( 1 )

	//循环(人物详细信息(34) == "艾尔莎岛")

		//发送聊天( 人物详细信息(34) $ "(" $ 人物详细信息(35) $ "," $ 人物详细信息(36) $ ")", 1, 1 )
	//循环尾()

	循环(人物详细信息(34) == "布拉基姆高地")

		如果(isBack == 0)
			如果(isSayBack == 5)
				等待战斗结束()
				curPet = 当前出战宠物()
				如果(人物详细信息(2) < humanBackHP)

					发送聊天( "<back>", 1, 1 )
					isBack = 1
					跳出循环()
				如果尾()
				如果(人物详细信息(4) < humanBackMP)

					发送聊天( "<back>", 2, 1 )
					isBack = 1
					跳出循环()
				如果尾()
				如果(宠物详细信息(curPet,2) < petBackHP)

					发送聊天( "<back>", 3, 1 )
					isBack = 1
					跳出循环()
				如果尾()
				如果(宠物详细信息(curPet,4) < petBackMP)

					发送聊天( "<back>", 4, 1 )
					isBack = 1
					跳出循环()
				如果尾()
			如果尾()
			如果( 获取信息记录("<back>","普通") != "" )
				isBack = 1
				跳出循环()
			如果尾()
		如果尾()

	循环尾()

	循环(人物详细信息(34) == "里谢里雅堡")
		//卖石头
		如果(人物详细信息(35) == 29 && 人物详细信息(36) == 77 )
			出售物品(2, "魔石")
		如果尾()
		如果(人物详细信息(35) == 29 && 人物详细信息(36) == 76 )
			出售物品(3, "魔石")
		如果尾()
		如果(人物详细信息(35) == 30 && 人物详细信息(36) == 76 )
			出售物品(4, "魔石")
		如果尾()
		如果(人物详细信息(35) == 31 && 人物详细信息(36) == 76 )
			出售物品(5, "魔石")
		如果尾()
		如果(人物详细信息(35) == 31 && 人物详细信息(36) == 77 )
			出售物品(6, "魔石")
		如果尾()
		如果(人物详细信息(35) == 31 && 人物详细信息(36) == 78 )
			出售物品(7, "魔石")
		如果尾()

		//补血恢复
		如果(人物详细信息(35) == 34 && 人物详细信息(36) == 89 )
			护士恢复(1)
		如果尾()
		如果(人物详细信息(35) == 34 && 人物详细信息(36) == 88 )
			护士恢复(2)
		如果尾()
		如果(人物详细信息(35) == 34 && 人物详细信息(36) == 87 )
			护士恢复(3)
		如果尾()

		//等待(1000)
	循环尾()

	//循环(人物详细信息(34) == "法兰城")

		//发送聊天( 人物详细信息(34) $ "(" $ 人物详细信息(35) $ "," $ 人物详细信息(36) $ ")", 1, 1 )
	//循环尾()

	//循环(人物详细信息(34) == "肯吉罗岛")

		//发送聊天( 人物详细信息(34) $ "(" $ 人物详细信息(35) $ "," $ 人物详细信息(36) $ ")", 1, 1 )
	//循环尾()

	循环(人物详细信息(34) == "医院\\z0")
		如果(isBack == 0)

		如果尾()

		如果(isBack != 0)
			isBack = 0
			循环( 获取信息记录("<back>","普通") != "" )
				//等待消除全部<back>
				等待(100)
			循环尾()
		如果尾()
	循环尾()

循环尾()