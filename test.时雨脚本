//v出战宠物 = 当前出战宠物()
//发送聊天(v出战宠物 $ "," $ 宠物详细信息(v出战宠物,"1") $ "," $ 宠物详细信息(v出战宠物,"2") $ "," $ 宠物详细信息(v出战宠物,"4"),"1","1")

saleItems = "魔石"

isSaleProducts = 信息提示("是否要卖产品？", 36)

如果(isSaleProducts == 5)
	products = 信息输入("请输入产品名，多个产品请用|分割", "请输入产品名", "")

	如果(products != "")
		saleItems = saleItems $ "|" $ products
	如果尾()

如果尾()

循环( 1 )

	循环(人物详细信息(34) == "村长的家\\z0")

		curX = 人物详细信息(35)
		curY = 人物详细信息(36)
		如果(curX == 15 && curY == 8)
			出售物品(2,saleItems)
		如果尾()
		如果(curX == 15 && curY == 7)
			出售物品(3,saleItems)
		如果尾()
		如果(curX == 16 && curY == 7)
			出售物品(4,saleItems)
		如果尾()
		如果(curX == 17 && curY == 7)
			出售物品(5,saleItems)
		如果尾()
		如果(curX == 17 && curY == 8)
			出售物品(6,saleItems)
		如果尾()

	循环尾()

	循环(人物详细信息(34) == "法兰城")

		curX = 人物详细信息(35)
		curY = 人物详细信息(36)
		如果(curX == 149 && curY == 122)
			出售物品(2,saleItems)
		如果尾()
		如果(curX == 149 && curY == 123)
			出售物品(1,saleItems)
		如果尾()
		如果(curX == 150 && curY == 123)
			出售物品(0,saleItems)
		如果尾()
		如果(curX == 151 && curY == 123)
			出售物品(7,saleItems)
		如果尾()
		如果(curX == 151 && curY == 122)
			出售物品(6,saleItems)
		如果尾()
		如果(curX == 151 && curY == 121)
			出售物品(5,saleItems)
		如果尾()

	循环尾()

循环尾()








