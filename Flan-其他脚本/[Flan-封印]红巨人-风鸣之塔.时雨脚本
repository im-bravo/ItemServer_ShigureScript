					petCatchCount = petCatchCount + 1
					timeTotal = 返回计时器()
					发送聊天("捕捉:" $ petCatchCount $ "只\S效率:" $ (petCatchCount * 3600 / timeTotal) $ "只/h",1,1)
					iPetInSpace = iPetInSpace + 1
				如果尾()
			循环尾()

			如果(isSearchEnemy != 0)
				自动遇敌(0)
				发送聊天("停止了遇敌",0,1)
			如果尾()

			如果(iPetInSpace > petSpaceCount)
				发送聊天("宠物栏已满，请丢宠物或是转存！",6,1)
			如果尾()

			等待(3000)

		如果尾()

		如果(curAction == "回补")
			登出回城()
			//等0~4s过图
			tryCount = 0
			循环(tryCount < 40 && 人物详细信息(34) != "艾尔莎岛")
				等待(100)
				tryCount = tryCount + 1
			循环尾()
		如果尾()

	循环尾()


循环尾()















