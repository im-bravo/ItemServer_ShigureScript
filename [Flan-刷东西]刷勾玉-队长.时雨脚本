			//等0~4s过图
			tryCount = 0
			循环(tryCount < 40 && 人物详细信息(34) != "阿凯鲁法村")
				等待(100)
				tryCount = tryCount + 1
			循环尾()
		如果尾()
		如果(curAction == "回补")
			如果(isCommonNurse == 0)
				自动寻路(22,17)
				护士恢复(0)
				等待(1000)
			如果尾()
			如果(isCommonNurse != 0)
				自动寻路(24,17)
				护士恢复(0)
				等待(1000)
			如果尾()
			curAction = "刷勾玉"
		如果尾()
	循环尾()

循环尾()
